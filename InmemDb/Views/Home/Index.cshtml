@model IEnumerable<InmemDb.Models.Dish>
@inject InmemDb.Services.IngredientService _ingredients

<script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.1.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/jquery.ajax.unobtrusive/3.2.4/jquery.unobtrusive-ajax.min.js"></script>

@{
    ViewData["Title"] = "Index";
}

<form asp-controller="Dishes" asp-action="Index">


    <h2>Index</h2>
    @*Column one
        ----------PIZZA DISHES----------
        Column one*@
    <div class="col-lg-3">
        <table class="table">
            <thead>
                <tr>
                    <th style="font-size:30px;background-color:green;color:white;">Pizza</th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    @if (item.Category.Name == "Pizza")
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <th style="font-size:10px;">@_ingredients.AllToStringForDishId(item.DishId)</th>
                            <td>@Html.DisplayFor(modelItem => item.Price)</td>
                            <td>
                                <a class="btn btn-primary" 
                                   asp-controller="ShoppingCart"
                                   asp-action="AddProduct"
                                   asp-route-id=@item.DishId
                                   data-ajax="true"
                                   data-ajax-mode="get"
                                   data-ajax-method="update"
                                   data-ajax-update="#orderSummary">
                                    Add
                                </a>
                            </td>
                        </tr>
                        
                    }
                }
            </tbody>
        </table>
    </div>
    @*Column 2
        ----------PASTA DISHES----------
        Column 2*@
    <div class="col-lg-3">
        <table class="table">
            <thead>
                <tr>
                    <th style="font-size:30px;background-color:white;color:black;">Pasta</th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    @if (item.Category.Name == "Pasta")
                {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <th style="font-size:10px;">@_ingredients.AllToStringForDishId(item.DishId)</th>
                            <td>@Html.DisplayFor(modelItem => item.Price)</td>
                            <td>
                                <a class="btn btn-primary"
                                   asp-controller="ShoppingCart"
                                   asp-action="AddProduct"
                                   asp-route-id=@item.DishId
                                   data-ajax="true"
                                   data-ajax-mode="get"
                                   data-ajax-method="update"
                                   data-ajax-update="#orderSummary">
                                    Add
                                </a>
                            </td>                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    @*Column 3
        ----------SALAD DISHES----------
        Column 3*@
    <div class="col-lg-3">
        <table class="table">
            <thead>
                <tr>
                    <th style="font-size:30px;background-color:red;color:white;">Salad</th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    @if (item.Category.Name == "Salad")
                {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <th style="font-size:10px;">@_ingredients.AllToStringForDishId(item.DishId)</th>
                            <td>@Html.DisplayFor(modelItem => item.Price)</td>
                            <td>
                                <a class="btn btn-primary"
                                   asp-controller="ShoppingCart"
                                   asp-action="AddProduct"
                                   asp-route-id=@item.DishId
                                   data-ajax="true"
                                   data-ajax-mode="get"
                                   data-ajax-method="update"
                                   data-ajax-update="#orderSummary">
                                    Add
                                </a>
                            </td>                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    @*Column 4
        ----------ORDERSUMMARY PARTIAL----------
        Column 4*@
    <div style="background-color: white;" class="col-lg-3">
        <table class="table">
            <thead>
                <tr>
                    <th style="font-size:30px;">Order</th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td id="orderSummary"></td>

                </tr>
            </tbody>
        </table>
        
    </div>

</form>