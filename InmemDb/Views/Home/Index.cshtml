@model IEnumerable<InmemDb.Models.Dish>
@inject InmemDb.Services.IngredientService _ingredientService


<script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.1.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/jquery.ajax.unobtrusive/3.2.4/jquery.unobtrusive-ajax.min.js"></script>
<link href="~/css/HomeIndexTable.css" rel="stylesheet" />

@{
    ViewData["Title"] = "Index";
}
<h2>Index</h2>
<form asp-controller="Dishes" asp-action="Index">
    @*Column one
        ----------PIZZA DISHES----------
        Column one*@
    <div class="col-lg-8">
        <table>
            <tr>
                <td style="font-size:30px;background-color:green;color:white;">Pizza</td>
            </tr>
                @foreach (var item in Model)
            {
                    @if (item.Category.Name == "Pizza")
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td style="font-size:10px;">@_ingredientService.AllToStringForDishId(item.DishId)</td>
                            <td>@Html.DisplayFor(modelItem => item.Price)</td>
                            <td>
                                <a class="btn btn-primary" 
                                   asp-controller="ShoppingCart"
                                   asp-action="AddProduct"
                                   asp-route-id=@item.DishId
                                   data-ajax="true"
                                   data-ajax-mode="get"
                                   data-ajax-method="update"
                                   data-ajax-update="#orderSummary">
                                    Add
                                </a>
                            </td>
                        </tr>
                    }
                }
                <tr>
                    <td style="font-size:30px;background-color:white;color:black;">Pasta</td>

                </tr>
                @foreach (var item in Model)
            {
                    @if (item.Category.Name == "Pasta")
                {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td style="font-size:10px;">@_ingredientService.AllToStringForDishId(item.DishId)</td>
                            <td>@Html.DisplayFor(modelItem => item.Price)</td>
                            <td>
                                <a class="btn btn-primary"
                                   asp-controller="ShoppingCart"
                                   asp-action="AddProduct"
                                   asp-route-id=@item.DishId
                                   data-ajax="true"
                                   data-ajax-mode="get"
                                   data-ajax-method="update"
                                   data-ajax-update="#orderSummary">
                                    Add
                                </a>
                            </td>
                        </tr>
                    }
                }
                <tr>
                    <td style="font-size:30px;background-color:red;color:white;">Salad</td>
                </tr>
                @foreach (var item in Model)
            {
                    @if (item.Category.Name == "Salad")
                {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td style="font-size:10px;">@_ingredientService
                                .AllToStringForDishId(item.DishId)</td>
                            <td>@Html.DisplayFor(modelItem => item.Price)</td>
                            <td>
                                <a class="btn btn-primary"
                                   asp-controller="ShoppingCart"
                                   asp-action="AddProduct"
                                   asp-route-id=@item.DishId
                                   data-ajax="true"
                                   data-ajax-mode="get"
                                   data-ajax-method="update"
                                   data-ajax-update="#orderSummary">
                                    Add
                                </a>
                            </td>                        
                        </tr>
                    }
                }
        </table>
    </div>
    <div class="col-lg-4">
        <table class="table">
            <thead>
                <tr>
                    <th><span class="glyphicon glyphicon-shopping-cart"></span> Shopping Cart</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td id="orderSummary"></td>
                </tr>
            </tbody>
                

                
        </table>
    </div>
</form>