@model ICollection<InmemDb.Models.DishOrder>



<table class="table-striped">
    @foreach (var dish in Model)
    {
        <tr>
            <td>@dish.Dish.Name</td>

            <td>@dish.Quantity * @dish.Dish.Price = @(dish.Quantity * dish.Dish.Price) KR</td>
        </tr>
    }
</table>
<table>
