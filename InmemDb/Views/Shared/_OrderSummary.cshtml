@model List<InmemDb.Models.DishCart>
@inject InmemDb.Services.IngredientService ingredientService

<div class="table">
    @foreach (var dish in Model)
    {
        <table>
            <tr>
                <td>@dish.Dish.Name</td>
                <td>@ingredientService.AllToStringForDishId(dish.DishId)</td>
                <td>@(dish.Quantity * dish.Dish.Price) KR</td>
                <td><a style="float:right;" class="btn btn-success" data-toggle="modal" data-target=".bootstrapmodal">Edit</a></td>
            </tr>
            
        </table>
    }
        <div class="modal fade bootstrapmodal">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    @foreach (var dish in Model)
                    {
                        <div class="modal-header">
                            <button class="close" data-dismiss="modal"><span>&times;</span></button>
                            <div class="modal-title">
                                @foreach (var ingredient in ingredientService.All())
                                {
                                    @if (dish.Dish.DishIngredients.Any(x => x.IngredientId == ingredient.IngredientId && x.Enabled))
                                    {
                                        <div>
                                            <input type="checkbox" value="ingredient-@ingredient.IngredientId" name="ingredient-@ingredient.IngredientId" checked />
                                            <span>@ingredient.Name</span>
                                        </div>
                                    }
                                    else
                                    {
                                        <div>
                                            <input type="checkbox" value="ingredient-@ingredient.IngredientId" name="ingredient-@ingredient.IngredientId" />
                                            <span>@ingredient.Name</span>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    <div class="modal-body">
                        @dish.Dish.Name
                    </div>
                    }
                    <div class="modal-footer">
                        <button class="btn btn-primary">Update</button>
                        <button class="btn btn-default" data-dismiss="modal">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    
</div>
<table class="table">
    <tr>
        <td><b>To Pay @Model.Sum(p => p.Dish.Price * p.Quantity) KR</b></td>
    </tr>
    <tr>
        <td><a class="btn btn-primary" asp-action="ResetCart" asp-controller="ShoppingCart">Reset</a></td>
        @*@if (User.IsInRole("User"))
            {
                <td><a class="btn btn-primary" asp-action="Payment" asp-controller="Order">Buy</a></td>
            }
            else
            {*@
        <td><a class="btn btn-primary" asp-action="LoginCreateOrGuest" asp-controller="ShoppingCart">Checkout</a></td>
        @*}*@
    </tr>
</table>