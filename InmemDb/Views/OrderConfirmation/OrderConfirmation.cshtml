@model OrderConfirmation
@inject InmemDb.Services.IIngredientService _ingredientService

<div style="margin-top:20px;">
    Tack @Model.Payment.FirstName för ditt köp! Vi kommer skicka dina varor till <br /> 
    @Model.Payment.ShippingAddress<br />
    @Model.Payment.ZipCode<br />
    asd @Model.Payment.City!<br /><br />
    Du får ett sms skickad till <b>@Model.Payment.PhoneNumber</b> ca 30 minuter innan leverans.
    <br /><br />
    En orderbekräftelse har skickats till @Model.Payment.Email!
    <br />
    Här nedan visas ditt köp.<br /><br />
</div>
@foreach (var item in Model.Payment.CartItem)
{
<table class="col-lg-2">
        <tr>
            <th>@item.Dish.Name</th>
        </tr>
        <tr>
            <td style="font-family:cursive">
                @foreach (var ingredient in await _ingredientService.GetIngredients(item.Dish.DishId))
                {
                    @ingredient.Name<br />
                }
            </td>
        </tr>
    <tr>
        <th>@item.Dish.Price KR</th>
    </tr>
</table>
}
<br /><br /><br /><br /><br /><br /><br />
<h3>Total : @Model.Payment.CartItem.Sum(p => p.Dish.Price * p.Quantity)</h3>