@model InmemDb.Models.Dish
@inject InmemDb.Services.IngredientService ingredientService

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Dish</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input type="text" asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <select style="width:100%" class="list-group-item" asp-for="CategoryId" asp-items="ViewBag.categoryList"></select>
            </div>

            @foreach (var ingredient in ingredientService.All())
            {
                <div class="col-lg-6">
                    
                    <input type="checkbox" value="name" />
                    <span>@ingredient.Name</span>
                </div>
            }


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
