@model NewDishVM
@{
    ViewData["Title"] = "Edit";
}

<form asp-controller="Dish" asp-action="Edit" method="post">
    <input asp-for="@Model.Dish.DishId" type="hidden" />
    <div class="row">
        <input class="validate" asp-for="@Model.Dish.Name">
        <label>Dish</label>
    </div>
    <div class="row">
        <input class="validate" asp-for="@Model.Dish.Price">
        <label>Price</label>
    </div>
    <div class="row">
        <select asp-for="@Model.IngredientIds" id="IngredientsList" style="width:200px;height:300px;">
            @foreach (var item in Model.Ingredients)
            {
                <option value="@item.IngredientId">@item.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <select asp-for="@Model.Dish.CategoryId" id="CatagoriesList">
            @foreach (var item in Model.Categories)
            {
                <option value="@item.CategoryId">@item.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </div>

</form>
